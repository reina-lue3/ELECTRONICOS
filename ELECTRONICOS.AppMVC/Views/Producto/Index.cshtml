@{
    ViewData["Title"] = "Registro de Productos";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Registrar Nuevo Producto</h5>
                </div>
                <div class="card-body">

                    @* Alertas de estado *@
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }

                    @* Formulario apuntando a Producto/Index *@
                    <form asp-controller="Producto" asp-action="Index" method="post">

                        <div class="mb-3">
                            <label for="marca" class="form-label">Marca</label>
                            <input type="text" id="marca" name="marca" class="form-control" placeholder="Ej: Apple" required>
                        </div>

                        <div class="mb-3">
                            <label for="modelo" class="form-label">Modelo</label>
                            <input type="text" id="modelo" name="modelo" class="form-control" placeholder="Ej: iPhone 15" required>
                        </div>

                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Descripción</label>
                            <textarea id="descripcion" name="descripcion" class="form-control" rows="3" placeholder="Detalles del producto..."></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Registrar en Catálogo
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>