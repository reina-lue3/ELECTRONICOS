    var productos = new[] {
        new { Nombre = "Monitor Gamer 4K", Precio = 549.00, Desc = "144Hz, HDR10 y panel IPS profesional.", Imagen = "https://images.unsplash.com/photo-1527443224154-c4a3942d3acf?w=400" },
